.startupPage {
  height: 100vh;
}
.startupPage .logo {
  width: 180rpx;
  height: 180rpx;
  margin: 111rpx auto 30rpx;
  display: block;
}
.startupPage .tips1 {
  font-size: 32rpx;
  font-weight: 300;
  color: #1F252B;
  line-height: 45rpx;
  text-align: center;
}
.startupPage .footer {
  width: 100%;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  padding-bottom: 240rpx;
}
@supports (bottom: constant(safe-area-inset-bottom)) or (bottom: env(safe-area-inset-bottom)) {
  .startupPage .footer {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 240rpx);
    padding-bottom: calc(env(safe-area-inset-bottom) + 240rpx);
  }
}
.startupPage .footer .icon {
  width: 87rpx;
  height: 40rpx;
  margin: 0 auto 32rpx;
  animation: dropdown 1s linear infinite;
}
.startupPage .footer .tips2 {
  font-size: 28rpx;
  font-weight: 300;
  color: #C7D7E7;
  line-height: 36prx;
}
@keyframes dropdown {
  0% {
    background: url('https://pickme-uploads-test.oss-cn-shenzhen.aliyuncs.com/miniProject/images/loading1.png');
    background-size: 100% 100%;
  }
  50% {
    background: url('https://pickme-uploads-test.oss-cn-shenzhen.aliyuncs.com/miniProject/images/loading2.png');
    background-size: 100% 100%;
  }
  100% {
    background: url('https://pickme-uploads-test.oss-cn-shenzhen.aliyuncs.com/miniProject/images/loading1.png');
    background-size: 100% 100%;
  }
}
