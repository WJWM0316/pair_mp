.report {
  padding-bottom: 130rpx;
}
.report .h1 {
  font-size: 28rpx;
  color: #66666E;
  line-height: 36rpx;
  padding: 35rpx 60rpx 24rpx 90rpx;
  position: relative;
}
.report .h1:before {
  position: absolute;
  left: 60rpx;
  bottom: 27rpx;
  width: 10rpx;
  height: 30rpx;
  background: #0CCDDA;
  display: block;
  content: '';
}
.report .h1.add {
  padding-top: 60rpx;
}
.report .ul .li {
  position: relative;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 30rpx;
  color: #1F252B;
  background: #ffffff;
  padding: 0 60rpx;
}
.report .ul .li:before {
  position: absolute;
  left: 60rpx;
  right: 0;
  bottom: 0rpx;
  content: '';
  height: 1rpx;
  transform: scaleY(0.5);
  background: #e9eaec;
  display: block;
}
.report .ul .li .icon2 {
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #EDF1F0;
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #EDF1F0;
  border-radius: 50%;
}
.report .ul .li .icon1 {
  color: #0CCDDA;
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
}
.report .photo-ul {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  grid-gap: 6px;
  background: white;
  padding: 24rpx 60rpx;
}
.report .photo-ul .item {
  padding-top: 100%;
  height: 0;
  position: relative;
  border-radius: 8rpx;
}
.report .photo-ul .item:before {
  top: 0;
  left: 0;
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  border: 1px solid #EDF1F0;
  transform-origin: 0 0;
  transform: scale(0.5, 0.5);
  box-sizing: border-box;
  border-radius: calc(2 * 8rpx);
}
.report .photo-ul .upload-icon:before {
  width: 1rpx;
  height: 42rpx;
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #CFD4D8;
}
.report .photo-ul .upload-icon:after {
  width: 42rpx;
  height: 1rpx;
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #CFD4D8;
}
.report .photo-ul .close-btn {
  width: 40rpx;
  height: 40rpx;
  background: #000000;
  border-radius: 23rpx;
  opacity: 0.2;
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  text-align: center;
  line-height: 40rpx;
}
.report .photo-ul .close-btn .icon {
  font-size: 16rpx;
  color: #ffffff;
  line-height: 1;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}
.report .photo-ul .inner {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  text-align: center;
}
.report .photo-ul .txt {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.report .photo-ul .action {
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  color: white;
  transform: rotate(90deg);
  text-align: center;
  line-height: 48rpx;
  font-size: 26rpx;
}
.report .photo-ul .cover-img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.report .user-input {
  position: relative;
  padding: 16rpx 0;
  width: 100%;
  height: 220rpx;
  background: white;
  box-sizing: border-box;
  padding: 24rpx 60rpx 64rpx 60rpx;
  margin-bottom: 40rpx;
}
.report .user-input textarea {
  width: 100%;
  height: 100%;
  display: block;
  padding: 0;
  box-sizing: border-box;
}
.report .user-input:after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  content: '';
  height: 1rpx;
  transform: scaleY(0.5);
  background: #EDF1F0;
  display: block;
}
.report .user-input .number {
  height: 32rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #cfd4d8;
  line-height: 32rpx;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  padding-right: 60rpx;
  text-align: right;
}
.report .user-input .number .strong {
  color: #0CCDDA;
}
.report .footer {
  width: 750rpx;
  height: 138rpx;
  background: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  box-sizing: border-box;
  padding: 25rpx 60rpx;
  padding-bottom: 25rpx;
}
@supports (bottom: constant(safe-area-inset-bottom)) or (bottom: env(safe-area-inset-bottom)) {
  .report .footer {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 25rpx);
    padding-bottom: calc(env(safe-area-inset-bottom) + 25rpx);
  }
}
.report .footer .btn {
  height: 88rpx;
  background: #0CCDDA;
  border-radius: 54rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  width: 100%;
  border: 0;
  box-shadow: none;
}
.holderStyle {
  color: #CFD4D8;
  font-size: 28rpx;
  font-weight: unset;
}
