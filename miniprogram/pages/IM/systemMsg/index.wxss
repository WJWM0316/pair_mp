.systemWrap .footer {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 25rpx 0;
  background-color: #F1F4F4;
  padding-bottom: 25rpx;
}
@supports (bottom: constant(safe-area-inset-bottom)) or (bottom: env(safe-area-inset-bottom)) {
  .systemWrap .footer {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 25rpx);
    padding-bottom: calc(env(safe-area-inset-bottom) + 25rpx);
  }
}
.systemWrap .footer .btn {
  width: 590rpx;
  height: 98rpx;
  background: #fff;
  border-radius: 49rpx;
  border: 1rpx solid #edf1f0;
  box-shadow: none;
  margin: 0 auto;
  font-size: 32rpx;
  line-height: 96rpx;
  color: #1F252B;
  font-weight: 300;
}
.block {
  height: 133rpx;
  padding-bottom: 25rpx;
}
@supports (bottom: constant(safe-area-inset-bottom)) or (bottom: env(safe-area-inset-bottom)) {
  .block {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 25rpx);
    padding-bottom: calc(env(safe-area-inset-bottom) + 25rpx);
  }
}
.message-list {
  position: relative;
  padding: 0 30rpx;
}
.message-list .message-box {
  margin-bottom: 30rpx;
}
.message-list .message-box .time {
  text-align: center;
  font-size: 24rpx;
  color: #9CA1AA;
  line-height: 32rpx;
  margin: 56rpx 0 18rpx;
}
.message-list .message-box:last-child {
  margin-bottom: 0;
}
.message-list .message-item::before,
.message-list .message-item::after {
  content: " ";
  display: table;
}
.message-list .message-item::after {
  clear: both;
}
.message-list .message-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.message-list .message-item .message-content {
  border-radius: 24rpx;
  position: relative;
  overflow: visible;
}
.message-list .message-item .message-content .msg {
  max-width: 460rpx;
  padding: 26rpx 42rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.message-list .message-item .message-content .msg .text {
  font-size: 30rpx;
  line-height: 40rpx;
}
.message-list .message-item .message-content .msg .btn-box {
  float: right;
}
.message-list .message-item .message-content .msg .btn-box .btn {
  border: none;
  box-shadow: none;
  height: 60rpx;
  background: #0CCDDA;
  border-radius: 34rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  line-height: 60rpx;
  margin: 32rpx 0 0;
  padding: 0 52rpx;
}
.message-list .message-item.others .avatar {
  float: left;
}
.message-list .message-item.others .message-content {
  border-top-left-radius: 8rpx;
  margin-left: 16rpx;
  float: left;
  background: #fff;
  color: #1F252B;
}
