.console {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #F1F4F4;
  z-index: 5;
  padding-bottom: 0rpx;
}
@supports (bottom: constant(safe-area-inset-bottom)) or (bottom: env(safe-area-inset-bottom)) {
  .console {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 0rpx);
    padding-bottom: calc(env(safe-area-inset-bottom) + 0rpx);
  }
}
.console.default::after {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  content: '';
  display: block;
  z-index: 6;
}
.console .textEdit {
  padding: 18rpx 114rpx 12rpx 26rpx;
  position: relative;
}
.console .textEdit .textarea-box {
  background: #fff;
  padding: 18rpx 40rpx;
  box-sizing: border-box;
  border-radius: 38rpx;
}
.console .textEdit .textarea-box .textarea {
  width: 100%;
  font-size: 30rpx;
  color: #1F252B;
  line-height: 38rpx;
  height: 38rpx;
  min-height: 38rpx;
}
.console .textEdit .send {
  bottom: 12rpx;
  right: 0;
  position: absolute;
  padding: 18rpx 30rpx 18rpx 20rpx;
  font-size: 32rpx;
  color: #CFD4D8;
  line-height: 40rpx;
}
.console .textEdit .send.can {
  color: #0CCDDA;
  font-weight: 700;
}
.console .other-type {
  padding: 0 57rpx 14rpx;
  display: flex;
  justify-content: space-between;
}
.console .other-type .item {
  position: relative;
  width: 68rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
}
.console .other-type .item .selected {
  right: 8rpx;
  bottom: 10rpx;
  display: block;
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
}
.console .other-type .item .icon {
  font-size: 44rpx;
  color: #1F252B;
  position: relative;
  z-index: 1;
}
.console .console-area {
  width: 100%;
  height: 400rpx;
}
.console .console-area .block {
  width: 100%;
  height: 100%;
}
.bottom {
  transition: all 0.5s;
  padding-bottom: 0rpx;
}
@supports (bottom: constant(safe-area-inset-bottom)) or (bottom: env(safe-area-inset-bottom)) {
  .bottom {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 0rpx);
    padding-bottom: calc(env(safe-area-inset-bottom) + 0rpx);
  }
}
