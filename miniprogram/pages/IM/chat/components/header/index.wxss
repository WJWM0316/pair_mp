.header {
  padding: 15rpx 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}
.header .header-inner {
  position: relative;
  box-shadow: 0rpx 12rpx 30rpx 0rpx rgba(30, 102, 102, 0.1);
  background: #fff;
  border-radius: 100rpx 24rpx 24rpx 100rpx;
  padding: 20rpx 76rpx 20rpx 20rpx;
}
.header .header-inner .header-card {
  padding: 0 20rpx 0 0;
}
.header .header-inner .header-card .avatar-box {
  position: relative;
}
.header .header-inner .header-card .avatar-box .avartBg {
  width: 100%;
  height: 80rpx;
  position: absolute;
  top: 10rpx;
  left: 0;
  background: rgba(244, 107, 161, 0.04);
  border-radius: 36rpx;
  padding: 0 132rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1;
}
.header .header-inner .header-card .avatar-box .avartBg .bgIcon.male {
  width: 115rpx;
  height: 32rpx;
  background: url('https://pickme-uploads-test.oss-cn-shenzhen.aliyuncs.com/miniProject/images/icon_imcard_line_male.png');
  background-size: 100% 100%;
}
.header .header-inner .header-card .avatar-box .avartBg .bgIcon.female {
  width: 115rpx;
  height: 32rpx;
  background: url('https://pickme-uploads-test.oss-cn-shenzhen.aliyuncs.com/miniProject/images/icon_imcard_line_female.png');
  background-size: 100% 100%;
}
.header .header-inner .header-card .avatar-box .avartBg .xinIcon {
  width: 60rpx;
  height: 60rpx;
  background: #fff;
  box-shadow: 0rpx 2rpx 15rpx 0rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}
.header .header-inner .header-card .avatar-box .avartBg .xinIcon .icon_aixin {
  font-size: 27rpx;
  color: #F46BA1;
}
.header .header-inner .header-card .avatar-box .avatarCon {
  padding: 0 20rpx;
  font-size: 0;
  position: relative;
  z-index: 2;
}
.header .header-inner .header-card .avatar-box .avatarCon::before,
.header .header-inner .header-card .avatar-box .avatarCon::after {
  content: " ";
  display: table;
}
.header .header-inner .header-card .avatar-box .avatarCon::after {
  clear: both;
}
.header .header-inner .header-card .avatar-box .avatarCon .avatar {
  width: 100rpx;
  height: 100rpx;
  border: 3rpx solid #fff;
  border-radius: 50%;
  box-sizing: border-box;
}
.header .header-inner .header-card .avatar-box .avatarCon .avatar.left {
  float: left;
}
.header .header-inner .header-card .avatar-box .avatarCon .avatar.right {
  float: right;
}
.header .header-inner .header-card .avatar-box .avatarCon .avatar.male {
  border-color: #0CCDDA;
}
.header .header-inner .header-card .avatar-box .avatarCon .avatar.female {
  border-color: #F46BA1;
}
.header .header-inner .header-card .avatar-box .avatarCon .guideImg {
  width: 574rpx;
  height: 236rpx;
  display: block;
  position: absolute;
  left: 0;
  top: 110rpx;
  z-index: 2;
}
.header .header-inner .header-card .avatar-box .noviceGuide {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.7);
  z-index: 1;
}
.header .header-inner .header-card .detail {
  margin: 22rpx 0 0 20rpx;
  font-size: 0;
}
.header .header-inner .header-card .detail .position {
  font-size: 26rpx;
  font-weight: 300;
  color: #1F252B;
  line-height: 34rpx;
  margin-bottom: 10rpx;
}
.header .header-inner .header-card .detail .info {
  font-size: 22rpx;
  color: #fff;
  line-height: 36rpx;
  height: 36rpx;
  background: #0CCDDA;
  border-radius: 18rpx;
  text-align: center;
  padding: 0 16rpx;
  margin-right: 12rpx;
  display: inline-block;
  max-width: 236rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.header .header-inner .header-card .detail .info .icon {
  display: inline-block;
  color: #fff;
  font-size: 14rpx;
  margin-right: 6rpx;
  line-height: 36rpx;
  vertical-align: top;
}
.header .header-inner .header-card .likeBox {
  padding-left: 20rpx;
}
.header .header-inner .header-card .likeTitle {
  padding: 24rpx 0 2rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #F46BA1;
  line-height: 32rpx;
  position: relative;
}
.header .header-inner .header-card .likeTitle .icon {
  font-size: 12rpx;
  margin: 0 7rpx 0 12rpx;
  line-height: 32rpx;
  vertical-align: top;
  display: inline-block;
}
.header .header-inner .header-card .likeTitle::after {
  content: '';
  width: 380rpx;
  height: 2rpx;
  background: #F1F4F4;
  position: absolute;
  right: 39rpx;
  bottom: 18rpx;
  display: block;
}
.header .header-inner .header-card .like {
  font-size: 0;
}
.header .header-inner .header-card .like .label {
  display: inline-block;
  padding-left: 32rpx;
  position: relative;
  font-size: 24rpx;
  font-weight: 300;
  color: #66666E;
  line-height: 32rpx;
  margin-right: 36rpx;
  margin-top: 10rpx;
}
.header .header-inner .header-card .like .label .icon {
  font-size: 20rpx;
  color: #0CCDDA;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translate3d(0, -50%, 0);
  border-radius: 50%;
}
.header .header-inner .rightBox {
  width: 76rpx;
  height: 100%;
  background: rgba(241, 244, 244, 0.6);
  border-radius: 0rpx 24rpx 24rpx 0rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.header .header-inner .rightBox .more-box {
  display: block;
  text-align: center;
  color: #66666E;
  padding: 25rpx 22rpx 22rpx;
  position: relative;
  height: 24rpx;
}
.header .header-inner .rightBox .more-box .icon {
  line-height: 24rpx;
  font-size: 24rpx;
  display: block;
}
.header .header-inner .rightBox .more-box:after {
  content: '';
  position: absolute;
  display: block;
  left: 22rpx;
  right: 22rpx;
  bottom: 0;
  border-bottom: 2rpx solid #C7D7E7;
}
.header .header-inner .rightBox .toggle {
  padding: 24rpx 26rpx 27rpx;
  line-height: 14rpx;
  text-align: center;
}
.header .header-inner .rightBox .toggle .icon {
  font-size: 10rpx;
  color: #66666E;
}
.header .header-inner.putUp {
  padding: 16rpx 76rpx 34rpx 20rpx;
  border-radius: 24rpx;
}
.header .header-inner.putUp .rightBox .toggle {
  width: 24rpx;
  padding: 0 26rpx 36rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 24rpx;
  color: #66666E;
  line-height: 32rpx;
}
