.account {
  background: #1F252B;
  min-height: 100vh;
  box-sizing: border-box;
}
.account .header {
  padding: 40rpx 60rpx 63rpx 48rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.account .header .btn {
  width: 197rpx;
  height: 80rpx;
  background: #0CCDDA;
  border-radius: 44rpx;
  line-height: 80rpx;
  text-align: center;
  flex: 0 0 0 197rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #ffffff;
  padding: 0;
}
.account .header .inner {
  flex: 1;
  height: 140rpx;
}
.account .header .pitang {
  height: 140rpx;
  display: inline-block;
}
.account .header .info {
  height: 140rpx;
  display: inline-block;
}
.account .header .info .number {
  font-size: 96rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 96rpx;
  letter-spacing: 1px;
}
.account .header .info .entry {
  height: 37rpx;
  font-size: 26rpx;
  font-weight: 300;
  color: #ffffff;
  line-height: 37rpx;
  margin-top: 2rpx;
}
.account .header .info .icon {
  font-size: 20rpx;
  margin-left: 8rpx;
}
.account .my-box {
  height: calc(100vh - 242rpx);
  background: #ffffff;
  box-shadow: 0rpx 7rpx 10rpx 0rpx rgba(197, 234, 226, 0.42);
  border-radius: 36rpx 36rpx 0 0 ;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  padding: 80rpx 60rpx;
}
.account .my-header {
  position: relative;
}
.account .my-header .btn {
  width: 158rpx;
  height: 60rpx;
  border-radius: 31rpx;
  border: 2rpx solid #0CCDDA;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 700;
  color: #0CCDDA;
  position: absolute;
  top: 0;
  right: 0;
}
.account .my-header .h1 {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F252B;
  line-height: 44rpx;
}
.account .my-header .h2 {
  line-height: 32rpx;
  font-size: 24rpx;
  font-weight: 300;
  color: #9CA1AA;
  margin-top: 4rpx;
}
.account .ul {
  margin: 26rpx 0 40rpx 0;
  padding-bottom: 60rpx;
  position: relative;
}
.account .ul:after {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  content: '';
  height: 1rpx;
  transform: scaleY(0.5);
  background: #e9eaec;
  display: block;
}
.account .ul:last-child {
  margin-left: 0;
}
.account .ul .li {
  width: 82rpx;
  margin-right: 9rpx;
  display: inline-block;
  overflow: hidden;
  box-sizing: border-box;
}
.account .ul .li .item {
  width: 100%;
  height: 90rpx;
  background: #f1f4f4;
  border-radius: 16rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  font-size: 28rpx;
  font-weight: 700;
  color: #9CA1AA;
  text-align: center;
  line-height: 90rpx;
}
.account .ul .li .day {
  font-size: 24rpx;
  color: #66666E;
  line-height: 32rpx;
  margin-top: 10rpx;
}
.account .ul .li .fanbei {
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 28rpx;
  background: #0CCDDA;
  border-radius: 0rpx 0rpx 16rpx 0rpx;
  font-size: 20rpx;
  color: #ffffff;
  text-align: center;
  line-height: 28rpx;
}
.account .ul .li .sign-bg {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.account .ul .li .txt1 {
  position: relative;
}
.account .my-header2 {
  position: relative;
  padding-bottom: 40rpx;
}
.account .my-header2:after {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  content: '';
  height: 1rpx;
  transform: scaleY(0.5);
  background: #e9eaec;
  display: block;
}
.account .my-header2 .btn {
  width: 158rpx;
  height: 60rpx;
  border-radius: 31rpx;
  border: 2rpx solid #0CCDDA;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 700;
  color: #0CCDDA;
  position: absolute;
  top: 0;
  right: 0;
}
.account .my-header2 .h1 {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F252B;
  line-height: 44rpx;
}
.account .my-header2 .h2 {
  line-height: 32rpx;
  font-size: 24rpx;
  font-weight: 300;
  color: #9CA1AA;
  margin-top: 4rpx;
}
