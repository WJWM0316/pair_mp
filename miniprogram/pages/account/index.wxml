<view class="account">
  <view class="header">
    <i-image my-class="pitang-bg" src="{{ CDNPATH }}bg_candypage@2x.png" mode="widthFix"></i-image>
    <view class="inner">
      <i-image my-class="pitang" src="{{ CDNPATH }}icon_pitang_30.png" mode="heightFix"></i-image>
      <view class="info">
        <view class="number">{{wallet.remain}}</view>
        <view class="entry" bindtap="viewBill">我的账单<i class="icon iconfont icon_jiantoumian_huaban"></i></view>
      </view>
    </view>
    <contactBtn contactType="recharge" title="去充值" my-class="btn"></contactBtn>    
  </view>
  <view class="my-box">
    <view class="my-header">
      <view class="h1">签到有礼</view>
      <view class="h2">每日签到可以免费获取相应皮糖哦~</view>
      <view class="btn" bindtap="sign" wx:if="{{ !todaySigned }}">立即签到</view>
      <view class="btn2" wx:else>已签到</view>
    </view>
    <view class="ul">
      <view class="li" wx:for="{{ weekSignConfig.configList }}" wx:key="index">
        <view class="item">          
          <view class="fanbei" wx:if="{{ item.sugarTimes === 2 }}">翻倍</view>
          <i-image my-class="sign-bg" src="{{ CDNPATH }}img_nosignin@3x.png" wx:if="{{!item.hasSign}}"></i-image>
          <i-image my-class="sign-bg" src="{{ CDNPATH }}img_signin@3x.png" wx:else></i-image>
          <view class="txt1 {{item.hasSign ? 'hasSign' : ''}}">
            <block wx:if="{{item.sugarBase > 1 || item.sugarTimes > 1}}">+<block wx:if="{{ item.sugarBase > 1 }}">{{ item.sugarBase }}x</block><block wx:if="{{ item.sugarTimes > 1 }}">{{ item.sugarTimes }}</block></block>
            <block wx:else>+1</block>
          </view>
        </view>
        <view class="day">第{{index+1}}天</view>
      </view>
    </view>
    <view class="my-header2">
      <view class="h1">邀请好友<text>+38皮糖/位</text></view>
      <view class="h2">每邀请1位均可获得38皮糖，不设上限</view>
      <view class="btn" bindtap="getUserShareCode">立即邀请</view>
    </view>
  </view>
</view>
<sugar-award-popup awardList="{{awardPopData}}" id="awardPopUp"></sugar-award-popup>
<view class="drawer" hidden="{{ !show }}"  catchtouchmove="stopPageScroll">
  <view class="mask"></view>
  <view class="content {{ show ? 'show' : ''}}">
    <i class="icon iconfont icon_xiaocha" bindtap="close" />
    <view class="h1">邀请好友</view>
    <view class="h2">
      <view class="inner11">
        <view class="text11">每成功邀请一人可得38</view>
        <i-image my-class="my_pitang" src="{{ CDNPATH }}icon_pitang_30.png" mode="heightFix"></i-image>
      </view>
    </view>
    <view class="copy-box" wx:if="{{options.showModel}}">
      <view class="inner22">
        <view class="h22">我的邀请码:ODH023</view>
        <view class="h33">可直接通过发送邀请码邀请你的好友</view>
        <view class="copy-btn">复制</view>
      </view>
    </view>
    <view class="methods" wx:if="{{options.showModel}}">
      <view class="text111">其他邀请方式</view>
    </view>
    <view class="tab {{options.showModel ? 'reduce' : ''}}">
      <i-button my-class="item1" bindtap="fetch" open-type="share">
        <view class="circle"><i class="icon iconfont icon_weixin"></i></view>
        <view class="txt">微信好友</view>
      </i-button>
      <i-button my-class="item2" bindtap="download">
        <view class="circle"><i class="icon iconfont icon_weixin"></i></view>
        <view class="txt">生成海报</view>
      </i-button>
    </view>
  </view>
</view>
