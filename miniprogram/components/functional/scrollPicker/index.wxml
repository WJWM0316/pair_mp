<view class="scrollPicker">
  <picker-view class="picker" indicator-class="indicator" value="{{ value }}" bindchange="bindChange" mask-class="mask">
    <block wx:if="{{ mode === 'selector'}}">
      <picker-view-column class="column">
        <view wx:for="{{ rangeArray }}" wx:key="index">
            {{ item[rangeKey] }}
        </view>
      </picker-view-column>    
    </block>
    <block wx:else>
      <picker-view-column
        class="column"
        wx:for="{{ rangeArray }}"
        wx:key="pIndex"
        wx:for-item="pItem"
        wx:for-index="pIndex">
        <view
          wx:for="{{ pItem }}"
          wx:key="cIndex"
          class="{{ rangeArray[pIndex][value[pIndex]] ? 'active' : 'default' }}"
          wx:for-index="cIndex">
            {{ item.key || item.title || item.text || item[rangeKey] }}
        </view>
      </picker-view-column>
    </block> 
  </picker-view>
</view>