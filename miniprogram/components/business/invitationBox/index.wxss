.invitationBox {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}
.invitationBox .content {
  width: 100vw;
  height: auto;
  border-radius: 24rpx 24rpx 0rpx 0rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  z-index: 10;
  overflow: hidden;
  transition: all 0.4s linear;
  opacity: 0.5;
  background: #F1F4F4;
  z-index: 11;
}
.invitationBox .h1 {
  height: 50rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f252b;
  line-height: 50rpx;
  text-align: center;
  margin-top: 62rpx;
}
.invitationBox .h2 {
  font-size: 30rpx;
  color: #1f252b;
  line-height: 48rpx;
  position: relative;
  text-align: center;
  margin-top: 10rpx;
}
.invitationBox .inner11 {
  display: inline-block;
  position: relative;
}
.invitationBox .inner11:after {
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  height: 24rpx;
  background: #0CCDDA;
  opacity: 0.08;
  bottom: 0;
  content: '';
}
.invitationBox .text11 {
  display: inline;
  position: relative;
  z-index: 2;
}
.invitationBox .my_pitang {
  height: 47rpx;
  position: relative;
  z-index: 2;
  top: 12rpx;
  margin-left: 5rpx;
}
.invitationBox .mask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 9;
  animation-name: modalopen;
  animation-duration: 0.2s;
}
.invitationBox .mask.show {
  bottom: 0;
  opacity: 1;
}
.invitationBox .content.show {
  opacity: 1;
}
.invitationBox .icon_xiaocha {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 20rpx;
  color: #CFD4D8;
  padding: 38rpx;
}
.invitationBox .copy-box {
  width: 630rpx;
  border-radius: 24rpx;
  margin: 53rpx 60rpx 0 60rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 30rpx 36rpx;
  position: relative;
  background: rgba(0, 0, 0, 0.015);
}
.invitationBox .copy-box .inner22 {
  position: relative;
}
.invitationBox .copy-box .copy-box {
  width: 100%;
  height: 100%;
  position: relative;
}
.invitationBox .copy-box .h22 {
  font-size: 34rpx;
  font-weight: 700;
  color: #1F252B;
  line-height: 42rpx;
}
.invitationBox .copy-box .h33 {
  font-size: 24rpx;
  color: #9CA1AA;
  line-height: 32rpx;
  margin-top: 6rpx;
}
.invitationBox .copy-box .copy-btn {
  width: 136rpx;
  height: 60rpx;
  background: #0CCDDA;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.invitationBox .methods {
  height: 40rpx;
  font-size: 28rpx;
  color: #66666E;
  line-height: 40rpx;
  text-align: center;
  margin-top: 48rpx;
}
.invitationBox .methods .text111 {
  position: relative;
  display: inline-block;
}
.invitationBox .methods .text111:before {
  content: '';
  display: inline-block;
  height: 1rpx;
  width: 28rpx;
  height: 2rpx;
  position: absolute;
  left: -48rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #66666E;
}
.invitationBox .methods .text111:after {
  content: '';
  display: inline-block;
  height: 1rpx;
  width: 28rpx;
  height: 2rpx;
  position: absolute;
  right: -48rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #66666E;
}
.invitationBox .tab {
  padding: 78rpx 0 82rpx 0;
  position: relative;
  overflow: hidden;
  text-align: center;
}
.invitationBox .tab .item1 {
  display: inline-block;
  width: unset;
  height: unset;
  border: unset;
  box-shadow: unset;
  margin-right: 150rpx;
}
.invitationBox .tab .item1 .circle {
  width: 100rpx;
  height: 100rpx;
  background: #17C18A;
  border-radius: 50%;
  position: relative;
}
.invitationBox .tab .item2 {
  display: inline-block;
  width: unset;
  height: unset;
  border: unset;
  box-shadow: unset;
}
.invitationBox .tab .item2 .circle {
  width: 100rpx;
  height: 100rpx;
  background: #FCB81C;
  border-radius: 50%;
  position: relative;
}
.invitationBox .tab .txt {
  font-size: 26rpx;
  color: #1F252B;
  line-height: 38rpx;
  margin-top: 12rpx;
}
.invitationBox .tab .icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 38rpx;
  color: #fff;
}
.invitationBox .tab.reduce {
  padding-top: 36rpx;
}
@keyframes modalopen {
  from {
    opacity: 0.5;
  }
  to {
    opacity: 1;
  }
}
