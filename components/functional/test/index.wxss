.customPicker {
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: 10;
}
.bg {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background: rgba(0,0,0,0.5);
}

.container {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	background: #fff;
	box-shadow:0rpx 0rpx 20rpx 0rpx rgba(0,0,0,0.08);
}
.container .tab {
	width: 100%;
	display: flex;
}
.container .tab .tabItem {
	text-align: center;
	flex: 1;
	height: 154rpx;
	display: flex;
	justify-content: center;
	flex-direction: column;
	align-items: center;
}
.container .tab .tabItem.active {
	background:#F0FCFC;
	border-radius:10rpx;
	position: relative;
}
.container .tab .tabItem.active::after {
	content: '';
	position: absolute;
	width:0;
  height:0;
  border-width:0 10rpx 10rpx;
  border-style:solid;
  bottom: 0;
  left: 50%;
  margin-left: -10rpx;
  border-color:transparent transparent #00C4CD;
}
.container .tab .tabItem .tabItem-title {
	font-size:24rpx;
	font-weight:300;
	color:#66666E;
	line-height:24rpx;
}

.container .header {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  font-size: 28rpx;
  border-bottom: 1rpx solid #F0FCFC;
}

.container .header .col-12{
  flex: 1;
}

.container .header .btn-cancle{
  float: left;
  padding: 0 25rpx;
}

.container .header .btn-confirm{
  float: right;
  padding: 0 25rpx;
}


.container .picker {
  height: 300px;
}


.container .indicator {
  height: 100rpx;
  border-top: 1px solid #F0FCFC;
  border-bottom: 1px solid #F0FCFC;
}


.container .column {
  font-size: 24rpx;
  color: #282828;
  text-align: center;
  line-height: 100rpx;
}