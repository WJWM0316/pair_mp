.search-company-page {
  padding-bottom: 148rpx;
}
.search-company-page .page-header {
  padding: 55rpx 40rpx 40rpx 40rpx;
  background: white;
}
.search-company-page .h1 {
  font-size: 36rpx;
  font-weight: bold;
  color: #282828;
  line-height: 1;
}
.search-company-page .h2 {
  font-size: 26rpx;
  font-weight: 400;
  color: #626262;
  line-height: 1;
  margin: 15rpx 0;
}
.search-company-page .p {
  font-size: 24rpx;
  font-weight: 400;
  color: #92929B;
  line-height: 1.8;
}
.search-company-page .input-li {
  height: 122rpx;
  line-height: 122rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #BCBEC0;
  padding: 0 40rpx;
  display: flex;
  background: white;
  position: relative;
  margin-top: 25rpx;
}
.search-company-page .example {
  font-size: 26rpx;
  font-weight: 400;
  color: #626262;
  line-height: 90rpx;
  background: white;
  padding: 0 40rpx;
}
.search-company-page input {
  height: 100%;
  width: 100%;
  color: #282828;
  font-weight: 700;
}
.search-company-page .company-name {
  flex: 1;
  font-size: 30rpx;
}
.search-company-page .btn-search {
  width: 150rpx;
}
.search-company-page .li {
  height: 98rpx;
  line-height: 98rpx;
  background: #ffffff;
  padding: 0 40rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #626262;
  position: relative;
  overflow: hidden;
}
.search-company-page .li:after {
  left: 40rpx;
  right: 40rpx;
  bottom: 0;
  content: '';
  height: 1rpx;
  transform: scaleY(0.5);
  background: #EDF1F0;
  display: block;
}
.search-company-page .bottomBox {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 25rpx 40rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}
.search-company-page .button-submit {
  height: 88rpx;
  background: #F5F4F7;
  border-radius: 4rpx;
  font-size: 32rpx;
  color: #CDCBCF;
  text-align: center;
  line-height: 88rpx;
}
.search-company-page .button-enable {
  background: #00C4CD;
  color: #ffffff;
}
.search-company-page .icon-jiantou {
  float: right;
  color: #DCDCDC;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 17rpx;
}
