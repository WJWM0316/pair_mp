.chatWrap {
  min-height: 100vh;
  background: #F1F4F4;
  transition: all 0.2s ease;
}
.chatWrap .chatArea {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.chatWrap .chatArea .scrollView {
  height: 100%;
}
.chatWrap .chatArea .message-list .message-item {
  margin-bottom: 30rpx;
  overflow: hidden;
}
.chatWrap .chatArea .message-list .message-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.chatWrap .chatArea .message-list .message-item .message-content {
  border-radius: 24rpx;
  overflow: hidden;
}
.chatWrap .chatArea .message-list .message-item .message-content .text {
  max-width: 460rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 26rpx 42rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.chatWrap .chatArea .message-list .message-item.others .avatar {
  float: left;
}
.chatWrap .chatArea .message-list .message-item.others .message-content {
  border-top-left-radius: 8rpx;
  margin-left: 16rpx;
  float: left;
  background: #fff;
  color: #1F252B;
}
.chatWrap .chatArea .message-list .message-item.mine .avatar {
  float: right;
}
.chatWrap .chatArea .message-list .message-item.mine .message-content {
  border-top-right-radius: 8rpx;
  margin-right: 16rpx;
  float: right;
  background: #0CCDDA;
  color: #fff;
}
.chatWrap .chatArea .message-list .message-item.mine .message-content.img,
.chatWrap .chatArea .message-list .message-item.mine .message-content.video {
  background: none;
}
.chatWrap .console {
  width: 100%;
}
.chatWrap .console .textEdit {
  padding: 18rpx 114rpx 12rpx 26rpx;
  position: relative;
}
.chatWrap .console .textEdit .textarea-box {
  background: #fff;
  padding: 18rpx 40rpx;
  box-sizing: border-box;
  border-radius: 38rpx;
}
.chatWrap .console .textEdit .textarea-box .textarea {
  width: 100%;
  min-height: 40rpx;
  max-height: 120rpx;
  font-size: 30rpx;
  color: #1F252B;
  line-height: 40rpx;
}
.chatWrap .console .textEdit .send {
  bottom: 12rpx;
  right: 0;
  position: absolute;
  padding: 18rpx 30rpx 18rpx 20rpx;
  font-size: 32rpx;
  color: #CFD4D8;
  line-height: 40rpx;
}
.chatWrap .console .textEdit .send.can {
  color: #0CCDDA;
  font-weight: 700;
}
.chatWrap .console .other-type {
  padding: 0 57rpx 14rpx;
  display: flex;
  justify-content: space-between;
}
.chatWrap .console .other-type .item {
  position: relative;
  width: 68rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
}
.chatWrap .console .other-type .item .selected {
  right: 8rpx;
  bottom: 10rpx;
  display: block;
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
}
.chatWrap .console .other-type .item .icon {
  font-size: 44rpx;
  color: #1F252B;
  position: relative;
  z-index: 1;
}
.chatWrap .console-area {
  width: 100%;
  height: 400rpx;
}
.chatWrap .console-area .block {
  width: 100%;
  height: 100%;
}
