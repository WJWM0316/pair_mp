.square {
  margin: 0 30rpx;
}
.item {
  height: 972rpx;
  background: #ffffff;
  box-shadow: 0rpx 11rpx 28rpx 0rpx rgba(181, 201, 201, 0.1);
  border-radius: 36rpx;
  margin: 24rpx 0;
  overflow: hidden;
}
.item .cover {
  height: 800rpx;
  border-radius: 36rpx 36rpx 36rpx 0rpx;
  overflow: hidden;
  position: relative;
}
.item .brief {
  padding: 46rpx 50rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #1F252B;
  line-height: 40rpx;
}
.item .mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.item .photo {
  width: 100%;
  height: 100%;
}
.item .album {
  height: 48rpx;
  border-radius: 24rpx;
  display: inline-block;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
  font-size: 24rpx;
  color: #1F252B;
  line-height: 48rpx;
  text-align: center;
  padding: 0 26rpx;
  background: rgba(255, 255, 255, 0.44);
}
.item .album .icon_im_tupian {
  margin-right: 10rpx;
  font-size: 26rpx;
}
.item .info {
  height: 200rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.7) 100%);
  border-radius: 0rpx 0rpx 36rpx 0rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
  padding-top: 46rpx;
}
.item .row1 {
  padding: 0 50rpx;
}
.item .nickname {
  max-width: 385rpx;
  height: 64rpx;
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  display: inline-block;
  line-height: 64rpx;
  vertical-align: top;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}
.item .year {
  width: 78rpx;
  height: 34rpx;
  background: #ffffff;
  border-radius: 8rpx;
  opacity: 0.9;
  display: inline-block;
  line-height: 34rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #1F252B;
  text-align: center;
  margin: 16rpx 0;
}
.item .height {
  width: 101rpx;
  height: 34rpx;
  background: #ffffff;
  border-radius: 8rpx;
  opacity: 0.9;
  display: inline-block;
  line-height: 34rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #1F252B;
  text-align: center;
  margin: 16rpx 0 16rpx 8rpx;
}
.item .row2 {
  height: 34rpx;
  font-size: 26rpx;
  font-weight: 300;
  color: #fff;
  line-height: 34rpx;
  padding: 0 50rpx;
  margin-top: 16rpx;
  position: relative;
}
.item .city-area {
  display: inline-block;
  margin-right: 16rpx;
}
.item .industry-position {
  display: inline-block;
  padding-left: 16rpx;
  position: relative;
}
.item .industry-position:before {
  content: '';
  width: 1rpx;
  height: 28rpx;
  background: #fff;
  display: block;
  top: 50%;
  transform: translateY(-50%) scaleX(0.5);
  position: absolute;
  left: 0;
}
