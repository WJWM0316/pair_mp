.perfect {
  min-height: 100vh;
  box-sizing: border-box;
}
.perfect .h1 {
  height: 56rpx;
  font-size: 48rpx;
  font-weight: 700;
  color: #1F252B;
  line-height: 56rpx;
  margin-top: 85rpx;
  margin-left: 80rpx;
}
.perfect .h2 {
  height: 36rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #1F252B;
  line-height: 36rpx;
  margin-top: 8rpx;
  margin-left: 80rpx;
}
.perfect .h3 {
  height: 40rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #1F252B;
  line-height: 40rpx;
}
.perfect .h4 {
  height: 34rpx;
  font-size: 26rpx;
  font-weight: 300;
  color: #9ca1aa;
  line-height: 34rpx;
  margin-top: 6rpx;
}
.perfect .small-btn {
  width: 136rpx;
  height: 60rpx;
  background: #0CCDDA;
  box-shadow: 0rpx 8rpx 18rpx 0rpx rgba(12, 205, 218, 0.36);
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 700;
  color: #fff;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}
.perfect .ul {
  margin-top: 68rpx;
  padding: 0 50rpx;
}
.perfect .li {
  background: #ffffff;
  box-shadow: 0rpx 6rpx 20rpx 5rpx rgba(90, 181, 185, 0.06);
  border-radius: 16rpx;
  padding: 50rpx 40rpx 50rpx 60rpx;
  position: relative;
  margin-bottom: 24rpx;
}
.perfect .tips {
  height: 24rpx;
  font-size: 24rpx;
  color: #9ca1aa;
  line-height: 24rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 114rpx;
  text-align: center;
}
.drawer {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.drawer .content {
  width: 100vw;
  height: auto;
  max-height: calc(100vh - 224rpx);
  border-radius: 24rpx 24rpx 0rpx 0rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  z-index: 10;
  overflow: hidden;
  transition: all 0.4s linear;
  opacity: 0.5;
  background: #F1F4F4;
  transform: translateY(-100%);
}
.drawer .mask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9;
  animation-name: modalopen;
  animation-duration: 0.2s;
}
.drawer .mask.show {
  bottom: 0;
  opacity: 1;
}
.drawer .content.show {
  bottom: 0;
  opacity: 1;
  transform: translateY(0);
}
.drawer .header {
  width: 100%;
  height: 108rpx;
  background: #ffffff;
  font-size: 36rpx;
  font-weight: 700;
  color: #354048;
  line-height: 108rpx;
  text-align: center;
  position: relative;
  margin-bottom: 30rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
}
.drawer .header .icon-close {
  font-size: 30rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 10rpx;
  padding: 0 25rpx;
  color: #929292;
}
.drawer .item {
  height: 112rpx;
  background: #ffffff;
  position: relative;
  line-height: 112rpx;
  text-align: center;
  font-size: 32rpx;
  color: #1F252B;
  background: white;
}
.drawer .item:after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  content: '';
  height: 1rpx;
  transform: scaleY(0.5);
  background: #EDF1F0;
  display: block;
}
.drawer .no-line {
  margin-bottom: 16rpx;
}
.drawer .no-line:after {
  position: absolute;
  display: none;
}
@keyframes modalopen {
  from {
    opacity: 0.5;
  }
  to {
    opacity: 1;
  }
}
