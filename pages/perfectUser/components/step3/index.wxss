.step3 {
  background: white;
  border-radius: 36rpx 36rpx 0rpx 0rpx;
  height: 100vh;
  box-sizing: border-box;
  padding: 96rpx 80rpx;
  display: none;
}
.step3 .h1 {
  height: 56rpx;
  font-size: 48rpx;
  font-weight: 700;
  color: #1F252B;
  line-height: 56rpx;
}
.step3 .h2 {
  height: 36rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #66666E;
  line-height: 36rpx;
  margin-top: 8rpx;
}
.step3 .progress {
  height: 8rpx;
  line-height: 8rpx;
  margin-top: 40rpx;
}
.step3 .progress .item {
  width: 60rpx;
  height: 8rpx;
  background: #F1F4F4;
  border-radius: 9rpx;
  margin-right: 8rpx;
  display: inline-block;
  vertical-align: top;
}
.step3 .progress .active-item {
  background: #0CCDDA;
}
.step3 .input {
  font-size: 36rpx;
  color: #1f252b;
  line-height: 60rpx;
}
.step3 .number {
  text-align: right;
  height: 40rpx;
  font-size: 28rpx;
  color: #CFD4D8;
  line-height: 40rpx;
  margin-top: 16rpx;
}
.step3 .strong {
  color: #0CCDDA;
}
.step3 .row {
  position: relative;
  margin-top: 76rpx;
  padding: 16rpx 0;
  width: 100%;
  max-height: 400rpx;
}
.step3 .row textarea {
  width: 590rpx;
  margin: 0 auto;
  display: block;
  padding: 0;
  box-sizing: border-box;
}
.step3 .row:after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  content: '';
  height: 1rpx;
  transform: scaleY(0.5);
  background: #EDF1F0;
  display: block;
}
