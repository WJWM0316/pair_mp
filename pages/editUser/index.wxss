.edit {
  margin-top: 30rpx;
}
.edit input {
  height: 108rpx;
  box-sizing: border-box;
  padding: 0 60rpx;
  background: #ffffff;
}
.edit .tips {
  height: 32rpx;
  font-size: 26rpx;
  font-weight: 300;
  color: #66666E;
  line-height: 32rpx;
  padding: 0 60rpx;
  margin-top: 26rpx;
}
.edit .bold {
  font-weight: 700;
}
.edit .input-nickname,
.edit .input-company {
  overflow: hidden;
}
.edit .input-birth {
  margin-top: 210rpx;
  padding: 0 80rpx;
}
.edit .icon1 {
  font-size: 26rpx;
  color: #0CCDDA;
  padding-right: 10rpx;
}
.edit .icon2 {
  font-size: 26rpx;
  color: #E85274;
  padding-right: 10rpx;
}
.edit .strong {
  color: #0CCDDA;
  font-size: 24rpx;
  font-weight: 700;
  padding-left: 24rpx;
}
.edit .input-ownDescribe {
  height: 522rpx;
  background: #ffffff;
  padding: 60rpx;
  position: relative;
  box-sizing: border-box;
}
.edit .input-ownDescribe .value {
  font-size: 32rpx;
  color: #1F252B;
  line-height: 48rpx;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}
.edit .input-ownDescribe .number {
  position: absolute;
  bottom: 32rpx;
  width: 100%;
  left: 0;
  font-size: 24rpx;
  line-height: 32rpx;
  text-align: right;
  box-sizing: border-box;
  padding-right: 60rpx;
  color: #CFD4D8;
}
.edit .input-ownDescribe .color {
  color: #0CCDDA;
}
.edit .box {
  margin-top: 30rpx;
}
.holderStyle {
  color: #CFD4D8;
  font-size: 36rpx;
  font-weight: unset;
}
.scroll-view {
  height: 480rpx;
}
.scroll-view .li {
  line-height: 90rpx;
  font-size: 28rpx;
  color: #9CA1AA;
  position: relative;
  overflow: hidden;
  height: 90rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 0 60rpx;
}
.scroll-view .icon-jiantou {
  float: right;
  color: #DCDCDC;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 17rpx;
}
